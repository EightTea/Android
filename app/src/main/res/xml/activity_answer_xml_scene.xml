<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
        <OnSwipe motion:touchAnchorId="@+id/answerRecyclerView" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/answerStateContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" />
        <Constraint
            android:id="@+id/answerSurveyTitle"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/answerStateContainer"
            motion:transitionEasing="linear">
            <CustomAttribute
                motion:attributeName="textSize"
                motion:customDimension="24px" />
            <CustomAttribute
                motion:attributeName="singleLine"
                motion:customBoolean="false" />
            <CustomAttribute
                motion:attributeName="ellipsize"
                motion:customIntegerValue="0" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/answerStateContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" />
        <Constraint
            android:id="@+id/answerSurveyTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="21dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/answerStateContainer"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="21dp" >
            <CustomAttribute
                motion:attributeName="textSize"
                motion:customDimension="16px" />
            <CustomAttribute
                motion:attributeName="singleLine"
                motion:customBoolean="true" />
            <CustomAttribute
                motion:attributeName="ellipsize"
                motion:customIntegerValue="3" />
        </Constraint>
    </ConstraintSet>
</MotionScene>